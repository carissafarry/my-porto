{
  "name": "nextarter-chakra",
  "version": "0.1.0",
  "private": true,
  "author": "sozonome",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:turbo": "turbo run build",
    "postbuild": "next-sitemap --config next-sitemap.config.js",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "eslint src --fix && pnpm format",
    "lint:turbo": "turbo run lint",
    "type-check": "tsc --noEmit",
    "type-check:turbo": "turbo run type-check",
    "test:e2e": "playwright test",
    "format": "prettier --write --ignore-path .gitignore src",
    "up-interactive": "pnpm up -i",
    "up-latest": "pnpm up-interactive -L",
    "release": "cross-env HUSKY=0 standard-version",
    "push-release": "git push --follow-tags origin main",
    "prepare": "husky install"
  },
  "dependencies": {
    "@chakra-ui/next-js": "^2.2.0",
    "@chakra-ui/react": "^2.8.2",
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@mdx-js/loader": "^3.0.0",
    "@mdx-js/react": "^3.0.0",
    "@next/mdx": "^14.0.4",
    "@types/react-dom": "^18.2.18",
    "@vercel/analytics": "^1.0.1",
    "framer-motion": "^10.18.0",
    "next": "^14.1.0",
    "next-pwa": "^5.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.10.1",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-code-titles": "^1.2.0",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^3.0.1",
    "remark-toc": "^9.0.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.6.6",
    "@commitlint/cz-commitlint": "^17.5.0",
    "@playwright/test": "^1.36.1",
    "@types/mdx": "^2.0.10",
    "@types/react": "^18.2.48",
    "commitizen": "^4.3.0",
    "commitlint": "^17.6.6",
    "cross-env": "^7.0.3",
    "date-fns": "^3.6.0",
    "eslint": "^8.45.0",
    "eslint-config-next": "^14.1.0",
    "eslint-config-sznm": "^2.0.2",
    "front-matter": "^4.0.2",
    "gray-matter": "^4.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "next-mdx-remote": "^4.4.1",
    "next-sitemap": "^4.1.8",
    "prettier": "^3.0.0",
    "rehype-highlight": "^7.0.0",
    "standard-version": "^9.5.0",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=16.x.x",
    "pnpm": ">=8"
  },
  "packageManager": "pnpm@8.1.0"
}
